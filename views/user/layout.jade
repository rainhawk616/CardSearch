doctype html
html(lang='en')
    include ../partials/head
    body
        nav.navbar.navbar-default.navbar-static-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/user/dashboard') Card Search
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li(class=(title == 'Dashboard') ? 'active' : undefined)
                            a(href='/user/dashboard') Dashboard
                        li(class=(title == 'Products') ? 'active' : undefined)
                            a(href='/user/products') Products
                    ul.nav.navbar-nav.navbar-right
                        if( user.admin )
                            li
                                a(href='/admin/dashboard') Admin
                        li.dropdown
                            a.dropdown-toggle(href='#' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                                | #{user.email}
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/user/account') Account
                                li.divider(role='separator')
                                li
                                    a(href='/logout') Logout
        .container
            .row
                .col-xs-10.col-xs-offset-1
                    .row
                        include ../partials/flash
                    .row
                        block content

        include ../partials/footer
